<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Follow Up</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Follow Ups</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <a href="<%= new_follow_up_path %>" class="btn btn-primary pull-right" style="margin: 30px 0 0 0;"><i class="fa fa-plus"></i> Add follow up</a>
    </div>
</div>

