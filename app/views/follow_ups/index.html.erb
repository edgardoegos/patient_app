                             <table class="table table-striped table-bordered table-hover " id="tbl-appointments">
                                <thead>
                                    <tr>
                                        <th>Patient ID</th>
                                        <th>Patient Name</th>
                                        <th>Record Date</th>
                                        <th>Complaint</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @follow_ups.each do |follow_up|  %>
                                        <tr class="gradeX">
                                            <td><%= follow_up.patient_id %></td>
                                            <td><%= follow_up.last_name %>, <%= follow_up.first_name %> <%= follow_up.middle_name %></td>
                                            <td><%= format_date(follow_up.consultation_date, "%Y %B %d") %></td>
                                            <td><%= follow_up.complaint %></td>
                                            <td><%= follow_up.status.titlecase %></td>
                                            <td class="center">
                                                <a href="<%= edit_follow_up_path(follow_up.id) %>" class="btn btn-primary btn-xs" data-appointment="<%= follow_up.to_json %>"><i class="fa fa-pencil-square-o"></i></a>
                                            </td>
                                        </tr>
                                    <% end %>
