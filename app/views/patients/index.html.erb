<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Patients</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Patients</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
      <% if staff_role != true %>
        <a href="<%= new_patient_path %>" class="btn btn-info btn-sm pull-right" style="margin: 32px -5px 0 0;"><i class="fa fa-plus"></i> Add patient</a>
      <% end %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">

        <div class="ibox-content">
          <h3>Patient <span class="semi-bold">List</span></h3><br \>
          <div class="">

          </div>
                    <table class="table table-striped table-bordered table-hover " id="tbl-patient">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Birth Date</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Civil Status</th>
                                <th>Weight</th>
                                <th>Height</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @patients.each do |patient|  %>
                                <tr class="gradeX">
                                    <td>
                                        <p><%= patient.last_name %>, <%= patient.first_name %> <%= patient.middle_name %></p>
                                    </td>
                                    <td><%= format_date(patient.birth_date, "%Y %B %d") %>
                                    </td>
                                    <td><%= patient.age %></td>
                                    <td><%= patient.gender.titlecase %></td>
                                    <td><%= patient.civil_status.titlecase %></td>
                                    <td><%= patient.weight %></td>
                                    <td><%= patient.height %></td>
                                    <td><%= patient.address %></td>
                                    <td>
                                      <a href="<%= patient_path(patient.id) %>" type="button" class="btn btn-info btn-xs"><i class="fa fa-eye" aria-hidden="true"></i> View</a>
                                      <a href="<%= edit_patient_path(patient.id) %>" type="button" class="btn btn-info btn-xs"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Birth Date</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Civil Status</th>
                                <th>Weight</th>
                                <th>Height</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
        </div>
      </div>
    </div>
  </div>
</div>