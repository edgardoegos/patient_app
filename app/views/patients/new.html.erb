<%= stylesheet_link_tag 'patients_index', media: 'all', 'data-turbolinks-track' => true %>
<style>
    .input-group-btn-vertical .bootstrap-touchspin-down {
        margin: -7px 0 0 -1px !important;
    }
    
    .required {
        color: #ca4440;
    }
    
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create Patient</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_url %>">Home</a>
            </li>
            <li>
                <a href="<%= patients_path %>">Patients</a>
            </li>
            <li class="active">
                <strong>Create Patient</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Note: <small>Labels with * are required</small></h5>
        </div>
        <div class="ibox-content">
                    <%= form_for @patient, url: { action: "create" }, :html => { :multipart => true, :class => "form-horizontal" } do |f| %>
                        <%= render partial: partials[:form][:patient], :locals => { :f => f, :title => "New Patient" } %>
                    <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
