<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Health Maintenance Organization</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= root_url %>">Home</a>
      </li>
      <li>
        <a href="">Settings</a>
      </li>
      <li class="active">
        <strong>Edit Health Maintenance Organization</strong>
      </li>
    </ol>
  </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-8">
      <div class="ibox float-e-margins">

        <div class="ibox-content">
          <h3>Health Maintenance Organization <span class="semi-bold">List</span></h3><br \>
          <div class="">

          </div>
          <table class="table table-striped table-bordered table-hover " id="tbl-hmo">
            <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @hmo_list.each do |hmo|  %>
                <tr class="gradeX">
                  <td><%= hmo.name %></td>
                  <td><%= hmo.description %></td>
                  <td class="center">
                    <a href="<%= edit_settings_health_maintenance_organization_path(hmo.id) %>" class="btn btn-primary btn-xs" ><i class="fa fa-pencil-square-o"></i></a>
                    <a href="javascript:void(0);" class="btn btn-danger btn-xs btn-delete" data-hmo="<%= hmo.to_json %>"><i class="fa fa-trash"></i></a>
                  </td>
                </tr>
            <% end %>
            </tbody>
            <tfoot>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <h3>Edit <span class="semi-bold"></span></h3><br \>
          <div class="row">
            <div class="col-md-12">
              <%= form_for @hmo, url: { action: "update" }, :html => { :multipart => true, :id => "form-condensed" } do |f| %>
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="hmo[name]" value="<%= @hmo.name %>">
                  </div>
                  <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" name="hmo[description]" value="<%= @hmo.description %>">
                  </div>
                  <div class="hr-line-dashed"></div>
                  <div class="pull-right">
                    <button class="btn btn-sm btn-success m-t-n-xs" type="submit"><strong>Create</strong></button>
                    <a href="<%= settings_health_maintenance_organizations_path %>"  class="btn btn-sm btn-default m-t-n-xs" type="button"><strong>Cancel</strong></a>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="mdl-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <br>
        <h4 id="myModalLabel" class="semi-bold centered" style="text-align: center;">Warning: You are about to delete this HMO?.</h4>
        <p class="no-margin centered" style="text-align: center;">This request is irreversible. Are you sure you want to delete <span id="spn-name" class="semi-bold"></span> permanently?</p>
        <br>
      </div>
      <div class="modal-footer">
        <%= form_tag({}, {:method => :delete, :id => "frm-delete"}) do %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger">Delete</button>
        <% end %>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->